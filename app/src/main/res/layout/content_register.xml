<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_reg">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="170dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvFrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="205dp"
            android:paddingHorizontal="55dp"
            android:text="@string/frase_register"
            android:textAlignment="center"
            android:textColor="@color/intro_description_color"
            android:textSize="18dp"
            app:fontFamily="@font/montserrat" />

        <EditText
            android:id="@+id/etNombreReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="265dp"
            android:layout_marginRight="50dp"
            android:drawableLeft="@drawable/icon_nameuser_1"
            android:ems="10"
            android:drawablePadding="5dp"
            android:hint="@string/text_et_nombre"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etPassReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="365dp"
            android:layout_marginRight="50dp"
            android:drawableLeft="@drawable/icon_pass_1"
            android:drawablePadding="5dp"
            android:hint="@string/text_et_pass"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/etEmailReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="315dp"
            android:layout_marginRight="50dp"
            android:drawableLeft="@drawable/icon_email_1"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="@string/text_et_email"
            android:inputType="textEmailAddress" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="184dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            app:srcCompat="@drawable/img_logo_reg" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>